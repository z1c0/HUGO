{{#section 'head'}}
  <link rel='stylesheet' href='/bower_components/emojione/assets/css/emojione-awesome.css' />
  <link rel='stylesheet' href='/css/hello.css' />
{{/section}}

<div id="hello" class="part">
  <div class="left">
    <p data-bind="text: greeting"></p>
    <i data-bind="css: emoji"></i>
  </div>
  <div class="right">
    <div class="gif" data-bind="style: { backgroundImage: 'url(\'' + gif.url() + '\')', width:  gif.width() + 'px', height: gif.height() + 'px' };"></div>
  </div>
</div>

<div id="bus" class="part">
  <!-- ko foreach: departures -->
  <p>
  <span data-bind="text: line() + ' ' + to().padRight(18) + min().padLeft(2)">
  </p>
  <!-- /ko -->
</div>


{{#section 'scripts'}}
  <script src="/hello/hello.client.js"></script>
{{/section}}