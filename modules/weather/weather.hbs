{{#section 'scripts'}}
<script>
  $(function () {
    $(document).ready(function () {
      const viewModel = ko.mapping.fromJS({{{json fetched}}});
      ko.applyBindings(viewModel);
      setInterval(function () {
        $.getJSON("api", function (data) {
          ko.mapping.fromJS(data, viewModel);
        });
      }, 5000);
    });
  });  
</script>
