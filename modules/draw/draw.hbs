{{#section 'head'}}
  <link rel='stylesheet' href='/css/draw.css' />
{{/section}}

<div id="draw">
  <canvas id="draw-canvas" width="400" height="400"></canvas>
  <p data-bind="text: color().text()"></p>
  <canvas id="color-chooser" height="150"></canvas>
  <input class="form-control" type="text" data-bind="textInput: name"/>
  <button class="btn btn-primary" data-bind="click: save">Save</button>
  <button class="btn btn-success" data-bind="click: init">New</button>
  <button class="btn btn-danger" data-bind="click: remove, enable: id">Delete</button>
  <ul data-bind="foreach: drawings">
    <li>
      <a class="btn btn-default" data-bind="attr: { href: '/draw/code/' + id()}">{}</a>
      <button class="btn btn-link" data-bind="text: name, click: $root.load"></button>
    </li>
  </ul>
</div>

{{#section 'scripts'}}
  <script src="/colors.js"></script>
  <script src="/draw/draw.client.js"></script>
{{/section}}

